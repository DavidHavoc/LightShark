# Network Traffic Analyzer Configuration
# fill in your API keys

# InfluxDB Configuration (automatically set by Docker Compose)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=network-analyzer-token-123456789
INFLUXDB_ORG=network-analyzer
INFLUXDB_BUCKET=network-traffic

# Network Interface Configuration
CAPTURE_INTERFACE=eth0
CAPTURE_FILTER=
CAPTURE_DURATION=0  # 0 for continuous capture

# IP Enrichment APIs (Optional - add your API keys)
# VirusTotal API
VIRUSTOTAL_API_KEY=

# AbuseIPDB API
ABUSEIPDB_API_KEY=

# MaxMind GeoIP Database (Optional)
MAXMIND_LICENSE_KEY=

# Application Settings
FLASK_PORT=5000
DEBUG=False
LOG_LEVEL=INFO

# Data Export Settings
EXPORT_CSV=True
EXPORT_JSON=True
EXPORT_PCAP=True
MAX_EXPORT_SIZE=100MB

